
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/darkPrimary</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DetailField" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="HeaderTextView" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkPrimary</item>
    </style>

    <style name="StandardDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Start styles used in theming, uiViewModel should select one of these two styles based on the theme. -->
    <!-- TextInputLayout styles are used in EditText forms for donors and products -->
    <!-- sets upper hint text size and color -->
    <style name="TextInputLayoutForLight" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightPrimary</item>
    </style>

    <style name="TextInputLayoutForDark" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item> <!-- sets upper hint text size  -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- DatePicker styles are used for the color areas in the calendar for a DatePicker -->
    <style name="DatePickerDialogThemeForLight" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/lightPrimary</item>
    </style>

    <style name="DatePickerDialogThemeForDark" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/darkPrimary</item>
    </style>
    <!-- end styles used in theming, uiViewModel should select on of these two styles based on the theme -->

</resources>
